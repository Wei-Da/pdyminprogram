.search_group{
  display: flex;
  flex-direction: row;
  height: 66rpx;
  justify-content: center;
}
.search_text{
  font-size: 26rpx;
  margin-right: 10rpx;
  height: 66rpx;
  line-height: 66rpx;
}
.search_date{
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0rpx 8rpx;
  margin: 13rpx 0rpx;
  margin-right: 10rpx;
  border: 1rpx solid #C0C0C0;
}
.search_button{
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0rpx 20rpx;
  margin: 8rpx 0rpx;
  background: #49B2F2;
  color: white;
  border-radius: 3rpx;
}
.search_title{
  align-self: center;
  margin-top: 10rpx;
  
}